{% style %}
  /* ------- Fonts ------- */
  @font-face {
    font-family: 'Gotham';
    src: url('{{ "gothambold-webfont.woff" | asset_url }}') format('woff2');
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Gotham';
    src: url('{{ "gothambook-webfont.woff" | asset_url }}') format('woff2');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Gotham';
    src: url('{{ "gothammedium-webfont.woff" | asset_url }}') format('woff2');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }
  /* ------- Font sizes ------- */
  :root {
    --font-family-base: 'Gotham', sans-serif;
    --line-height-heading: 130%;
    --line-height-h4: 115%;
    --line-height-body: 150%;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-family-base);
    font-weight: 900;
    line-height: var(--line-height-heading);
  }
  ,
  h4 {
    line-height: var(--line-height-h4);
  }

  p,
  a,
  span,
  ul,
  li,
  ol,
  button {
    font-family: var(--font-family-base);
    font-weight: 400;
    line-height: var(--line-height-body);
  }
  /* Mobile setup  */
  h1 {
    font-size: 38px;
  }
  h2 {
    font-size: 36px;
  }
  h3 {
    font-size: 20px;
  }
  h4 {
    font-size: 16px;
  }
  /*----- Product section css on mobile ------ */
  .custom-product {
    width: 100vw;
    height: 100%;
  }
  .customProduct__container {
    width: 90%;
    margin: 0px auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  /* ----- customProduct__images -------- */
  .customProduct__images {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 1rem;
    scroll-padding-inline: 1rem;
    scroll-behavior: smooth;
  }
  /* scroll bar */
  .customProduct__images::-webkit-scrollbar {
    height: 3px;
  }
  .customProduct__images::-webkit-scrollbar-track {
    background: transparent;
    margin: 0 20px; /* padding */
  }
  .customProduct__images::-webkit-scrollbar-thumb {
    background: #000; /* adjust to match figma color */
    border-radius: 2px;
  }
  .customProduct__images::-webkit-scrollbar-thumb:hover {
    background: #444;
  }

  /* ------ Product Card ------ */
  .customProduct__card {
    flex: 0 0 80%;
    max-width: 340px;
    aspect-ratio: 340 / 351;
    background: #f9f9f9;
    overflow: hidden;
    scroll-snap-align: start;
    position: relative;
  }

  .customProduct__card img,
  .customProduct__card svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* ------ Announcement Badge ------ */
  .customProduct__card--announcement {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #e2f2f3;
    color: #171714;
    font-size: 10px;
    line-height: var(--line-height-body);
    padding: 6px 12px;
    border-radius: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10px;
  }
  .details__reviews-text {
    height: 100%;
    height: 64px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .details__reviews {
    display: flex;
    justify-content: start;
    align-items: center;
    gap: 3px;
    height: 19px;
  }
  .details__reviews span {
    font-size: 12px;
    line-height: var(--line-height-body);
    color: rgba(26, 26, 26, 1);
    font-weight: 500;
  }
  .details__reviews img:first-child {
    width: 74px;
    height: 14px;
    aspect-ratio: 74 / 14;
  }
  .details__reviews img:nth-child(2) {
